<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_hotTrendBookImg"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        app:civ_border_color="@color/lightGray"
        app:civ_border_overlay="true"
        app:civ_border_width="5dp" />

    <TextView
        android:id="@+id/tv_hotTrendClassName"
        android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/suitebold"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/gray"
        android:textAlignment="center"
        android:gravity="center"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tv_hotTrendTitle"
        android:layout_margin="10dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/suitebold"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_hotTrendBookAuthor"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/suitebold"
        android:textSize="15sp"
        android:textColor="@color/gray"
        android:textAlignment="center"
        android:gravity="center"
        android:visibility="visible"/>

</LinearLayout>