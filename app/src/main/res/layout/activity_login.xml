<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/iv_ic_book"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/logo_bookscovery" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextColor="@color/brandcolor5"
        app:boxStrokeColor="@color/brandcolor5">
        <EditText
            android:id="@+id/et_input_id"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:paddingStart="10dp"
            android:fontFamily="@font/suitebold"
            android:textSize="20dp"
            android:inputType="text"
            android:hint="　아이디" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:passwordToggleEnabled="true"
        app:hintTextColor="@color/brandcolor5"
        app:boxStrokeColor="@color/brandcolor5">
        <EditText
            android:id="@+id/et_input_pwd"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:paddingStart="10dp"
            android:fontFamily="@font/suitebold"
            android:textSize="20dp"
            android:inputType="textPassword"
            android:hint="　비밀번호" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_login"
        android:layout_marginTop="50dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/suitebold"
        android:backgroundTint="#80C3F9"
        android:textSize="25dp"
        android:text="로그인"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btJoin"
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/suitebold"
        android:backgroundTint="#80C3F9"
        android:textSize="25dp"
        android:text="회원가입"/>

</LinearLayout>
